{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "writes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": { "type": "string", "enum": ["workspace", "run"] },
          "path": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["target", "path", "content"],
        "additionalProperties": false
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cmd": { "type": "string" },
          "timeout": { "type": "integer", "minimum": 1 }
        },
        "required": ["cmd", "timeout"],
        "additionalProperties": false
      }
    }
  },
  "required": ["writes", "commands"],
  "additionalProperties": false
}
