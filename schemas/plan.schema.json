{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "plan_id": { "type": "string" },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "type": { "type": "string", "const": "time_for_certainty" },
          "priority": { "type": "integer" },
          "estimated_minutes": { "type": "integer" },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "acceptance_criteria": {
            "type": "array",
            "items": { "type": "string" }
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" }
              },
              "required": ["type"],
              "additionalProperties": true
            },
            "minItems": 1
          }
        },
        "required": [
          "id",
          "title",
          "type",
          "priority",
          "estimated_minutes",
          "dependencies",
          "acceptance_criteria",
          "checks"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["plan_id", "tasks"],
  "additionalProperties": false
}
